<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/popupResume"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Resume"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/caviar_dreams"
        android:ems="8"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/popupLevelSelector"/>

    <Button
        android:id="@+id/popupLevelSelector"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Level Selector"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/caviar_dreams"
        android:ems="8"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toTopOf="@+id/popupLeaderBoard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupResume" />

    <Button
        android:id="@+id/popupLeaderBoard"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Leader Board"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/caviar_dreams"
        android:ems="8"
        android:layout_marginBottom="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupLevelSelector"
        app:layout_constraintBottom_toTopOf="@+id/popupGlossary" />

    <Button
        android:id="@+id/popupGlossary"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Glossary"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/caviar_dreams"
        android:ems="8"
        android:layout_marginBottom="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupLeaderBoard"
        app:layout_constraintBottom_toTopOf="@+id/popupExit"/>

    <Button
        android:id="@+id/popupExit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Exit"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/caviar_dreams"
        android:ems="8"
        android:layout_marginBottom="40dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupGlossary"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>